{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*", "app/*/index"],
      "@assets/*": ["assets/*", "assets/*/index"],
      "@pages/*": ["pages/*", "pages/*/index"],
      "@widgets/*": ["widgets/*", "widgets/*/index"],
      "@features/*": ["features/*", "features/*/index"],
      "@entities/*": ["entities/*", "entities/*/index"],
      "@shared/*": ["shared/*", "shared/*/index"]
    },
    "sourceMap": true
  },
  "exclude": ["config"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src"]
}
